{% if isLoggedIn %}
    <span>Logged in as {{ username }}, <a href="{{ logoutUrl }}">logout</a></span>
    {% if stats %}
        <div class="video-publisher-mt-2">
            <span class="video-publisher-bold">Storage used: </span>
            <span>{{ (stats['storage'] / 1e+9) | round(3) }} GB</span>
        </div>
        <div>
            <span class="video-publisher-bold">Data streamed: </span>
            <span>{{ (stats['streaming'] / 1e+9) | round(3) }} GB</span>
        </div>
    {% endif %}

{% else %}
    <a href="{{ loginUrl }}">Login to isset.video</a>
{% endif %}